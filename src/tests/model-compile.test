#!/bin/bash -xe

cd ${TEST_TMPDIR}

PATH=${TOOLCHAIN_PATH}:${abs_builddir}/../models:${abs_builddir}/../frontend:$PATH

# Run with GCC
${TOOLCHAIN_PATH}/gcc -g -O2 -S -frandom-seed=winstein -o remake.s.gold $DATADIR/remake.i

# Create thunk
model-gcc gcc -g -O2 -S -frandom-seed=winstein -o remake.s $DATADIR/remake.i

# execute thunk
GG_SANDBOXED=1 gg-reduce remake.s

# check difference
diff remake.s remake.s.gold
