#!/bin/bash -xe

cd ${TEST_TMPDIR}

export PATH=${abs_builddir}/../models:${abs_builddir}/../frontend:$PATH
MAGIC="##GGTHUNK##"

OUTPUT=curhello
GCC_ARGS="$DATADIR/curhello.o -lncurses"

# Run with GCC
PATH=${TOOLCHAIN_PATH}:$PATH gcc ${GCC_ARGS} -o ${OUTPUT}.gold -pie -L/usr/lib/gcc/x86_64-linux-gnu/7 -L/usr/lib/x86_64-linux-gnu -L/usr/lib -L/lib/x86_64-linux-gnu -L/lib -L/usr/lib/x86_64-linux-gnu -L/usr/lib -L/usr/lib -L/lib -L/usr/lib -Wl,-rpath-link,/lib/x86_64-linux-gnu -B/usr/lib/gcc

# Create thunk
GG_DIR=.gg/ model-gcc gcc -pie ${GCC_ARGS} -o ${OUTPUT}

# Assert it's a thunk
if [ $MAGIC != `head -c 11 ${OUTPUT}` ]; then
  echo "Failed to create thunk"
  exit 1
fi

# execute thunk
gg-execute -s ${OUTPUT}

# check difference
diff ${OUTPUT} ${OUTPUT}.gold
