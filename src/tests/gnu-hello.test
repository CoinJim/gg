#!/bin/bash -ex

cd ${TEST_TMPDIR}

PATH=${abs_builddir}/../models:${abs_builddir}/../frontend:$PATH
export GG_MODELPATH=${abs_srcdir}/../models/wrappers

cp -R $DATADIR/hello .
cd hello

autoreconf -fi
./configure --prefix=$(readlink -f .)
gg-infer make install
GG_SANDBOXED=1 gg-reduce bin/hello
./bin/hello
