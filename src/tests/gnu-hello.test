#!/bin/bash -ex

cd ${TEST_TMPDIR}

PATH=${abs_builddir}/../models:${abs_builddir}/../frontend:$PATH

apt-get source hello
cd hello-*
export GG_DIR=$(readlink -f __gg__)
./configure --prefix=$(readlink -f .)
make install CC="model-gcc gcc" AR="model-ar" RANLIB="model-ranlib"
gg-reduce -s --gg-dir=$GG_DIR bin/hello
./bin/hello
