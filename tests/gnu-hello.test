#!/bin/bash -ex

cd ${TEST_TMPDIR}

export PATH=${abs_builddir}/../src/models:${abs_builddir}/../src/frontend:$PATH
export GG_MODELPATH=${abs_srcdir}/../src/models/wrappers

cp -R $DATADIR/hello .
cd hello

autoreconf -fi
./configure --prefix=$(readlink -f .)
gg-infer make install
GG_SANDBOXED=1 gg-force bin/hello
./bin/hello
